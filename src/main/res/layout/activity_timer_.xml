<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActitvity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="546dp"
        android:layout_height="819dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgrounds" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_media_play"
        android:onClick="onClickStart"
        android:scrollbarThumbHorizontal="@android:drawable/checkbox_on_background"
        android:shadowColor="#00DA1919"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#00E20606"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="#00181818"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />


    <Button
        android:id="@+id/reset"
        android:layout_width="73dp"
        android:layout_height="59dp"
        android:background="@drawable/icons8_restart_144"
        android:onClick="onClickReset"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.407" />

    <Button
        android:id="@+id/pause"
        android:layout_width="76dp"
        android:layout_height="58dp"
        android:background="@android:drawable/ic_media_pause"
        android:onClick="onClickPause"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <EditText
        android:id="@+id/timer"
        android:layout_width="203dp"
        android:layout_height="98dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:hint="0:00:00"
        android:inputType="time"
        android:textColor="#00796B"
        android:textColorHighlight="#18CFB9"
        android:textSize="55dp"
        app:layout_constraintBottom_toTopOf="@+id/pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

</androidx.constraintlayout.widget.ConstraintLayout>